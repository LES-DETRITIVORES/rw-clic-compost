model User {
  id                  Int     @id @default(autoincrement())
  email               String  @unique
  hashedPassword      String    
  salt                String    
  resetToken          String?
  resetTokenExpiresAt DateTime?
}

model Subscription {
  id        Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  profile   String?
  firstname String?
  lastname  String?
  company   String?
  email     String?
  phone     String?
  location  String?
  meals     Int?
  service   String?
  rate      String?
  startedAt DateTime
  customer  String?
  card      String?
  iban      String?
}


